{
  "compilerOptions": {
    "outDir": "./build/ts/",
    "typeRoots": [
      "./starter/typings",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "@emotion/react/types/css-prop"
    ],
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "skipLibCheck": true,
    "jsx": "react",
    "paths": {
      "assets/*": ["web/assets/*"],
      "components/*": ["web/components/*"],
      "model/*": ["web/model/*"],
      "pages/*": ["web/pages/*"],
      "api/*": ["api/*"],
      "web/*": ["web/*"],
      "server/*": ["server/*"],
      "starter/*": ["starter/*"]
    }
  },
  "include": [
    "./api/**/*",
    "./web/**/*",
    "./server/**/*",
    "./starter/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "starter/config",
    "starter/scripts"
  ]
}
